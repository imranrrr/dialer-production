<%# app/views/auth/show.html.erb %>
<div class="breg">
<div class="box">
<div class="reg"></div>
<nav class="navbar" role="navigation" style="margin-left: -80px; margin-top: 30px">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
		   		<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to t('labels.home'), root_path, class: "navbar-brand user_link", style: "margin-left: 150px; padding: 31px 10px; font-size: 25px;" %>
			</div>

<p class="text-2xl text-gray-900 font-medium mb-3" style="font-size: 20px;">
  <%= t 'auth.phone'%>
</p>
<%= form_with(url: auth_path, html: { data: { turbo: false } }) do |f| %>
  <%= f.phone_field :phone, value: params[:phone], placeholder: t('auth.phone_placeholder'), class: "border-gray-300 form-control", style: 'width: 29%; display: initial; height: 40px', value: "998" %>

  
  <% if @display_name_fields %>
    <%= f.text_field :fio, placeholder: t('auth.fio'), style: "width: 29%; display: initial; height: 40px;", class: " mt-3 rounded-md form-control" %>
    <%= f.select :rank, @ranks, :selected => @default_rank %>  
  <% end %>
  
  <%= f.submit t('auth.index.button'), class: " btn btn-primary text-white", style: "font-size: 18px;" %>
  <div class="text-center text-gray-600 text-sm" style="margin-top: 10px; font-size: 18px;"><%= t 'auth.index.message1' %> <a href="#" target="_blank" rel="noopener noreferrer" class="user_link underline text-pink-500"><%= t 'auth.index.message2'%></a></div>
</div>
</div>
<% end %>
