<h1 class="text-center text-primary" style="margin-bottom: 20px"><%=@model_name_single %></h1>

<% prefix = "activerecord.attributes.group." %>
<p class="text-center" style="margin-bottom: 20px">
<strong class="text-center"><%= t(prefix +'group') %></strong>
  <%= @group.group %>
</p>

<p class="text-center" style="margin-bottom: 20px" >
  <strong><%= t(prefix + 'group_description') %></strong>
  <%= @group.group_description %>
</p>
<div class="text-center">
<button class="btn"><%= link_to  t('labels.edit'), edit_group_path(@group), class: "user_link" %></button> |

<button class="btn btn-info"><%= link_to  t('labels.back'), groups_path, class: "user_link", style: "color: white" %></button>
</div>